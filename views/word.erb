<h2>Word: <%= @word.name %></h2>

<h3>Word definitions</h3>

  <% if @word.definitions %>
    <ul>
      <% @word.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no definitions for this word yet.</p>
  <% end %>

<h4>Add a definition:</h4>

<form action="/words/<%= @album.id %>/definitions" method="post">
  <div class="form-group">
    <label for="definition_name">Song name</label>
    <input id="definition_name" name="definition_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add a definition to a word</button>
</form>



<p><a href="/albums/<%= @album.id %>/edit">Edit Word</a></p>
<p><a href="/albums">Return to word list</a></p>
