<h1>Update <%= @word.name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename word to:</label>
  <input id="name" name="name" type="text"><br>

  <button type="submit">Update word while keeping the same definition</button><br>

</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>

<p><a href="/words">Return to word list</a></p>
